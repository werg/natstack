{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@natstack/ai": ["packages/ai/src/index.ts"],
      "@natstack/git": ["packages/git/src/index.ts"],
      "@natstack/pubsub": ["packages/pubsub/src/index.ts"],
      "@natstack/agentic-messaging": ["packages/agentic-messaging/src/index.ts"],
      "@natstack/react": ["packages/react/src/index.ts"],
      "@natstack/rpc": ["packages/rpc/src/index.ts"],
      "@natstack/runtime": ["packages/runtime/src/index.ts"],
      "@natstack/eval": ["packages/eval/src/index.ts"]
    }
  },
  "include": ["src/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", "**/dist", "packages/playwright-*"]
}
