{
  "name": "@workspace-workers/claude-code-responder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "natstack": {
    "type": "worker",
    "title": "Claude Code Responder",
    "runtime": "worker",
    "unsafe": "/",
    "stateArgs": {
      "type": "object",
      "properties": {
        "channel": { "type": "string" },
        "handle": { "type": "string", "default": "claude" },
        "model": { "type": "string", "default": "claude-sonnet-4-5-20250929" },
        "maxThinkingTokens": { "type": "integer", "default": 10240 },
        "executionMode": { "type": "string", "enum": ["plan", "edit"], "default": "edit" },
        "autonomyLevel": { "type": "integer", "default": 0, "minimum": 0, "maximum": 2 },
        "workingDirectory": { "type": "string" },
        "restrictedMode": { "type": "boolean" }
      },
      "required": ["channel", "restrictedMode"]
    }
  },
  "dependencies": {
    "@natstack/runtime": "workspace:*",
    "@natstack/agentic-messaging": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "*",
    "zod": "*"
  }
}
