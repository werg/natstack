{
  "name": "@workspace-agents/claude-code-responder",
  "version": "0.1.0-git.5bee972",
  "type": "module",
  "natstack": {
    "type": "agent",
    "title": "Claude Code Responder",
    "description": "AI-powered code assistant using the Claude Agent SDK with full tool support",
    "channels": [
      "chat:*"
    ],
    "parameters": [
      {
        "key": "maxThinkingTokens",
        "label": "Thinking Budget",
        "description": "Extended thinking token budget for complex reasoning",
        "type": "slider",
        "required": false,
        "default": 10240,
        "min": 0,
        "max": 32000,
        "step": 1024,
        "sliderLabels": { "min": "Off", "max": "Maximum" },
        "group": "Model",
        "order": 2
      },
      {
        "key": "executionMode",
        "label": "Execution Mode",
        "type": "toggle",
        "default": "edit",
        "options": [
          { "value": "plan", "label": "Plan", "description": "Explore and plan without executing tools" },
          { "value": "edit", "label": "Edit", "description": "Execute tools to make changes" }
        ],
        "group": "Permissions",
        "order": 3
      },
      {
        "key": "autonomyLevel",
        "label": "Autonomy",
        "type": "slider",
        "default": 2,
        "min": 0,
        "max": 2,
        "step": 1,
        "notches": [
          { "value": 0, "label": "Restricted", "description": "Read-only access, requires approval" },
          { "value": 1, "label": "Standard", "description": "Can modify workspace" },
          { "value": 2, "label": "Autonomous", "description": "Full access, minimal restrictions" }
        ],
        "visibleWhen": { "field": "executionMode", "operator": "eq", "value": "edit" },
        "warnings": [{ "when": 2, "message": "Allows unrestricted tool execution", "severity": "danger" }],
        "group": "Permissions",
        "order": 4
      }
    ]
  },
  "dependencies": {
    "@workspace/agent-runtime": "workspace:*",
    "@workspace/agent-patterns": "workspace:*",
    "@workspace/agentic-messaging": "workspace:*",
    "@natstack/pubsub": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "*",
    "zod": "*"
  }
}